# ============================================
# Environment Variables - Production Template
# Copy this file to .env and update values
# ============================================

# Application Environment
ASPNETCORE_ENVIRONMENT=Production
COMPOSE_PROJECT_NAME=alfred

# Service Ports (Development)
# Gateway: External port for clients
GATEWAY_PORT=8000
# Identity Service: Internal port (accessed via Gateway)
IDENTITY_PORT=8100

# PostgreSQL Configuration
POSTGRES_USER=alfred
POSTGRES_PASSWORD=Password123
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=Password123
REDIS_PORT=6379

# JWT Configuration (for Gateway token validation)
JWT_ISSUER=Alfred.Identity
JWT_AUDIENCE=Alfred.API

# Gateway & Identity URLs (for OAuth/OIDC issuer configuration)
GATEWAY_URL=https://gateway.test
IDENTITY_INTERNAL_URL=http://alfred-identity:8100

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Docker Build
VERSION=latest
# ============================================
# mTLS Configuration (Service-to-Service Security)
# ============================================
# Enable mTLS for secure communication between Gateway and backend services
# Set to 'true' to enable mTLS, 'false' to use plain HTTP (default)
MTLS_ENABLED=false

# Note: Certificate paths are configured in docker-compose.prod.yml
# Make sure to generate certificates before enabling mTLS:
#   cd certificates && ./generate-certs.sh