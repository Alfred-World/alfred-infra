# ============================================
# Environment Variables - Development Template
# Copy this file to .env and update values
# ============================================

# Application Environment
ASPNETCORE_ENVIRONMENT=Development
COMPOSE_PROJECT_NAME=alfred

# Service Ports (Development)
# Gateway: External port for clients
GATEWAY_PORT=8000
# Identity Service: Internal port (accessed via Gateway)
IDENTITY_PORT=8100

# PostgreSQL Configuration
POSTGRES_USER=alfred
POSTGRES_PASSWORD=Password123
POSTGRES_DB=alfred_db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=Password123
REDIS_PORT=6379

# JWT Configuration (for Gateway token validation)
JWT_ISSUER=Alfred.Identity
JWT_AUDIENCE=Alfred.API

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Docker Build
VERSION=latest
